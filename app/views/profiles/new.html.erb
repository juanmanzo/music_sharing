<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">Create Your Profile</h1>
    <p class="text-center">Be a part of the MusicSharing community and fill out your profile!</p>
    <div class="well">
      <%= form_for @profile, url: user_profiles_path do |f| %>
          <div class="form-group">
            <%= f.label :album %>
            <%= f.text_field :album, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :comments %>
            <%= f.text_area :comments, class: 'form-control' %>
          </div>
          <div class = "container">
              <h3>Choose your Top 3 songs of the album</h3>
          </div>
          <div class="form-group">
            <%= f.label :firstsong, 'First Song'%>
            <%= f.text_field :firstsong, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :secondsong, 'Second Song' %>
            <%= f.text_field :secondsong, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :thirdsong, 'Third Song'%>
            <%= f.text_field :thirdsong, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.submit "Update Profile", class: 'btn btn-primary' %>
          </div>
        <% end %>
    </div>
  </div>
</div>