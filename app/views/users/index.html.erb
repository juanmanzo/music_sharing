<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1 class="text-center"><span>MusicSharing</span> Community <br> <small></small></h1>
      <div class = "well">
      <ul class="list-unstyled">
        <% @users.each do |user| %>
          <% if user.profile %>
            <li>
              <div class ="row row-index">
              <div class="prof-list-well col-md-8 col-md-offset-2 text-center">
                <div class = "row">
                
                    <%= link_to user do %>
                      <%= image_tag user.profile.imageurl, class: "user-index-avatar" %>
                  <% end %>                
          
                </div>
                
                <div class = "row">
                  <div class="text-center">
                  <%= link_to user do %>
                    <h2 class="community-name"><%= user.username %></h2>
                  <% end %>
                </div>
                </div>
              </div>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
      </div>
    </div>
  </div>
</div>