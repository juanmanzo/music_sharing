<div class="container">
  <% if user_signed_in? %>
  <h1 class = "white-color text-center">Welcome, <%= current_user.username %></h1>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well sel-alb-well">
          <h2 class="text-center well-text-header">Your Profile</h2>
            <% if current_user.profile %>
              <div class="row">
                <div class="col-md-12 text-center">
                <%= link_to "View your profile", user_path(current_user.id), class: 'btn view-profile-btn btn-success btn-lg btn-correct' %>
                <%= link_to "Edit your profile", change_album_path(current_user.id), class: 'btn view-profile-btn btn-info btn-lg btn-correct' %>
                </div>
              </div>
            <% else %>
              <h4 class="text-center">Create your profile so you can share your favorite album with the community.</h4>
              <div class="row">
                <div class="col-md-12 text-center">
                  <%= link_to "Create your profile", new_user_albums_path(user_id: current_user.id), class: 'btn view-profile-btn btn-primary btn-lg btn-correct' %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="well sel-alb-well">
            <h2 class="text-center well-text-header">The Community</h2>
            <h4 class="text-center well-copy">Visit the community to see other users favorite album</h4>
            <div class="row">
              <div class="col-md-12 text-center">
                <%= link_to "Visit the community", users_path, class: 'btn view-profile-btn btn-primary btn-lg btn-correct' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
  <div class="row">
      <div class="col-md-6 col-md-offset-3 text-center white-color">
        <h2>Welcome To Music Sharing</h2>
        <h4>An Album Sharing community</h4>
        </br>
    </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well">
          <h2 class="text-center well-text-header">Sign Up</h2>
          <h4 class="text-center well-basic-copy">Sign up for free to share an album and to visit the community.</h4>
          <div class="row">
            <div class="col-md-12 text-center">
              <%= link_to "Sign up", new_user_registration_path, class: 'btn view-profile-btn btn-primary btn-lg btn-correct' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>


</div>